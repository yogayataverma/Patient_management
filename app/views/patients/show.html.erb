<div class="d-flex justify-content-center">
<div class="card border-warning shadow" style="background-color: #FFC0CB;width:50%;margin-top: 15%">
    <div class="card-body">
      <h1 class="card-title text-center" style="color:white;">Patient Details</h1>
      
      <div class="row"  style="color:grey;">
        <div class="col-md-6">
          <strong>First Name:</strong>
          <%= @patient.first_name %>
        </div>
        <div class="col-md-6">
          <strong>Last Name:</strong>
          <%= @patient.last_name %>
        </div>
      </div>

      <div class="row mt-3"  style="color:grey;">
        <div class="col-md-6">
          <strong>Date of Birth:</strong>
          <%= @patient.date_of_birth %>
        </div>
        <div class="col-md-6">
          <strong>Gender:</strong>
          <%= @patient.gender.capitalize %>
        </div>
      </div>

      <div class="row mt-3"  style="color:grey;"">
        <div class="col-md-6">
          <strong>Phone Number:</strong>
          <%= @patient.phone_number %>
        </div>
        <div class="col-md-6">
          <strong>Email:</strong>
          <%= @patient.email %>
        </div>
      </div>

      <div class="row mt-3"  style="color:grey;">
        <div class="col-md-12">
          <strong>Doctor:</strong>
          <%= @patient.doctor %>
        </div>
      </div>
    </div>
  </div>
</div>
